<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YasApp.Pages.HomePage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Chic Boutique"
             BackgroundColor="#FFF4EA"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#FFF4EA"/>
    </ContentPage.Behaviors>
    <VerticalStackLayout>

        <Image Source="chic.png" WidthRequest="220" Margin="115,115,115,30"></Image>

        <Label 
            Text="Chic Boutique"
            Margin="0,0,0,20"
            FontSize="Title"
            FontAttributes="Italic"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="Bem-vindo(a) à Chic Boutique - sua casa da moda! Descubra estilo e elegância em cada clique. Explore nossa coleção exclusiva e apaixone-se pela moda como nunca antes!"
            FontSize="Subtitle"
            Margin="30"
            FontAttributes="Italic"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />





    </VerticalStackLayout>
</ContentPage>